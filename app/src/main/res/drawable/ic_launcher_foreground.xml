<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Gradient green circular background -->
  <item>
    <shape android:shape="oval">
      <gradient
          android:type="linear"
          android:angle="90"
          android:startColor="#8BC34A"
          android:endColor="#2E7D32"/>
    </shape>
  </item>

  <!-- Ghost vector -->
  <item>
    <vector
        android:width="200dp"
        android:height="200dp"
        android:viewportWidth="200"
        android:viewportHeight="200">

      <!-- Body -->
      <path android:fillColor="#FFFFFF"
          android:pathData="
M70,50
C78,20 122,20 130,50
C136,75 124,78 124,110
C124,155 165,175 120,155
C115,175 105,175 100,155
C95,175 85,175 80,155
C35,175 76,155 76,110
C76,78 64,75 70,50
Z" />

      <!-- Left arm: lowered -->
      <path
          android:fillColor="#FFFFFF"
          android:pathData="
M76,101
C62,106 62,118 76,120
C82,116 82,106 76,101
Z" />

      <!-- Right arm: lowered -->
      <path
          android:fillColor="#FFFFFF"
          android:pathData="
M124,101
C138,106 138,118 124,120
C118,116 118,106 124,101
Z" />

      <!-- Left eye -->
      <path
          android:fillColor="#000000"
          android:pathData="M90.4,64 a6.3,10 0 1,1 0.1,0 z" />

      <!-- Right eye -->
      <path
          android:fillColor="#000000"
          android:pathData="M109.6,64 a6.3,10 0 1,1 0.1,0 z" />

      <!-- Smile -->
      <path
          android:fillColor="@android:color/transparent"
          android:strokeColor="#000000"
          android:strokeWidth="3"
          android:strokeLineCap="round"
          android:pathData="M85.6,74 C95,86 105,86 114.4,74" />

    </vector>
  </item>
</layer-list>
